#include "platform.h"
#include "settings.h"
#include <RP2040.h>
//------------------------------------------------------------------------------------------------------------------
int RXLED = LED_BUILTIN;
//------------------------------------------------------------------------------------------------------------------
void platform_init(void)
{
    pinMode(RXLED, OUTPUT);

    SPI.setRX(miso);
    SPI.setTX(mosi);
    SPI.setSCK(sck);
    SPI.setCS(ss);

    gpio_init(gdo0);
    gpio_set_dir(gdo0, GPIO_OUT);
}

//------------------------------------------------------------------------------------------------------------------
String platform_get_name(void)
{
  return F("RP2040");
}

